<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/peopleBtns"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/people3_Btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3명" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/people4_Btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4명" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/people5_Btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5명" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cards"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/peopleBtns">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_A"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    app:cardBackgroundColor="#D8D6D6"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/a_card_listView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_B"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="#D8D6D6"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_A">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/b_card_listView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_C"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="#D8D6D6"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_B">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/c_card_listView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_D"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="#D8D6D6"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_C">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/d_card_listView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                    </androidx.recyclerview.widget.RecyclerView>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_E"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="#D8D6D6"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_D">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/e_card_listView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                    </androidx.recyclerview.widget.RecyclerView>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#4A4A4A"
        app:cardCornerRadius="10dp"
        app:contentPadding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cards">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottom_card_listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>